<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../partials/head") %>
</head>
<body>
    <%- include("../partials/nav") %>
    <div class="container mt-3">
        <div class="row">
            <div class="col-md-12 mt-3">
                <% if (action != "undefined" && action=="edit") { %>
                    <div class="alert alert-info">
                        <%= categoryid %> ID numaralı kategori güncellendi!
                    </div>
                <% } %>

                <% if (action != "undefined" && action=="create") { %>
                    <div class="alert alert-info">
                        Kategori eklendi!
                    </div>
                <% } %>

                <% if (action != "undefined" && action=="delete") { %>
                    <div class="alert alert-info">
                        Kategori silindi!
                    </div>
                <% } %>

                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th style="width: 50px;">ID</th>
                            <th>Kategori Adı</th>
                            <th style="width: 150px;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% categories.forEach(category => { %>
                         <tr>
                            <td><%= category.dataValues.id %></td>
                            <td><%= category.dataValues.name %></td>
                            <td>
                                <a class="btn btn-sm btn-primary" href="/admin/categories/<%= category.dataValues.id %>">Edit</a>
                                <a class="btn btn-sm btn-danger" href="/admin/category/delete/<%= category.dataValues.id %>">Delete</a>
                            </td>
                            
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>