<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../partials/head") %>
</head>
<body>
    <%- include("../partials/nav") %>
    <div class="container mt-3">
        <div class="row">
            <div class="col-md-12 mt-3"> 
                <form method="post">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <input type="hidden" name="categoryid" value="<%= category.id %>">
                    <div class="row mb-3">
                        <label for="name" class="col-sm-2 col-form-label">Kategori Adı</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="name" name="name" value="<%= category.name %>">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-8 offset-sm-2">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
            <p>
                Toplam Blog Sayısı: <%= countBlog %>
            </p>
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th style="width: 50px;">ID</th>
                        <th style="width: 200px;">Resim</th>
                        <th>Başlık</th>
                        <th style="width: 230px;"></th>
                    </tr>
                </thead>
                <tbody>
                    <% blogs.forEach(blog => { %>
                     <tr>
                        <td><%= blog.dataValues.id %></td>
                        <td>
                            <img src="/static/images/<%= blog.dataValues.resim %>" class="img-fluid" alt="">
                        </td>
                        <td><%= blog.dataValues.baslik %></td>
                        <td>
                            <a class="btn btn-sm btn-primary" href="/admin/blogs/<%= blog.dataValues.id %>">Edit</a>

                            <form style="display: inline-block;" action="/admin/categories/remove" method="post">
                                <input type="hidden" name="blogid" value="<%= blog.id %>">
                                <input type="hidden" name="categoryid" value="<%= category.id %>">
                                <button class="btn btn-sm btn-danger" type="submit" >Remove From Category</button>
                            </form>
                        </td>        
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>